<Window x:Class="DiagnosticsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiagnosticsExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
            DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="Diagnostics" Text="{Binding DiagnosticsText}" VerticalAlignment="Top" Grid.Row="0" />
        <WrapPanel Grid.Row="1" Margin="10" HorizontalAlignment="Left">
            <Button x:Name="SubscribeButton" Click="SubscribeButton_Click" Margin="0,0,10,0">Subscribe</Button>
            <Button x:Name="BroadcastButton" Click="BroadcastButton_Click" Margin="0,0,10,0">Broadcast</Button>
            <Button x:Name="AppChannelBroadcastButton" Click="AppChannelBroadcastButton_Click" Margin="0,0,10,0" ToolTip="Broadcasting on AppChannel: app-channel-1">AC - Broadcast</Button>
            <Button x:Name="AppChannelAddContextListenerButton" Click="AppChannelAddContextListenerButton_Click" ToolTip="Adding ContextListener on AppChannel: app-channel-1">AC - AddContextListener</Button>
        </WrapPanel>
    </Grid>
</Window>
