<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RootNamespace>MorganStanley.ComposeUI.Messaging</RootNamespace>
		<Description>.NET Core Package for ComposeUI's Message Router. More Details: http://opensource.morganstanley.com/ComposeUI/</Description>
		<Tags>ComposeUI</Tags>
	</PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
	</PropertyGroup>
	<ItemGroup>
		<InternalsVisibleTo Include="$(AssemblyName).Tests" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.HighPerformance" />
		<PackageReference Include="Nito.AsyncEx.Coordination" />
		<PackageReference Include="System.Reactive" />
		<PackageReference Include="System.Reactive.Async" />
		<PackageReference Include="System.Text.Json" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Exceptions\" />
	</ItemGroup>
</Project>