<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>MorganStanley.ComposeUI.Messaging</RootNamespace>
		<Description>
			A .NET server package for ComposeUI's Message Router. Enables hosting and managing message routing infrastructure for distributed .NET applications. 
			Provides dependency injection support, extensibility, and seamless integration with ComposeUI messaging clients.
  			More details: https://morganstanley.github.io/ComposeUI/
		</Description>
		<Tags>ComposeUI</Tags>
	</PropertyGroup>

	<PropertyGroup>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" />
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options" />
		<PackageReference Include="System.IO.Pipelines" />
		<PackageReference Include="System.Text.Json" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="$(AssemblyName).Tests" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="../Core/MorganStanley.ComposeUI.Messaging.Core.csproj" />
	</ItemGroup>

</Project>